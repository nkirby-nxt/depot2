<p style="color: green"><%= notice %></p>

<div class="max-w-lg mx-auto mt-16 text-center max-w-xl rounded overflow-hidden shadow-lg p-5">
  <h1 class="mb-4 text-5xl font-black">Orders</h1>
  <p class="text-lg leading-snug">Current Orders</p>
</div>
<br>

<%= turbo_stream_from :orders%>

<table class="min-w-full table-auto">
	  <thead class="bg-gray-800 text-gray-300">
	    <tr>
	      <th>Order ID</th>
	      <th>Customer</th>
	      <th>Products</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @orders.each do |order| %>
	      <tr class="border-4 border-gray-200">
	        <td><%= order.id %></td>
	        <td><%= order.customer.name %></td>
	        <td><%= order.products.name %></td>
	        
	        <td><%= link_to 'Show', product, class: "text-blue-500" if user_signed_in? %></td>
	        <td><%= link_to 'Edit', edit_product_path(product) if user_signed_in? %></td>
	        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }  if user_signed_in? %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
    <br>

<%= link_to "New order", new_order_path %>
