<p style="color: green"><%= notice %></p>

<div class="max-w-lg mx-auto mt-16 text-center max-w-xl rounded overflow-hidden shadow-lg p-5">
  <h1 class="mb-4 text-5xl font-black">Orders</h1>
  <p class="text-lg leading-snug">Current Orders</p>
</div>

<%= turbo_stream_from :orders%>
<%= turbo_frame_tag :orders do %>
  <%= render @orders %>
<% end %>

<table class="table-fixed">
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Customer</th>
      <th>Products</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.customer.name %></td>
      <td><%= order.products %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "New order", new_order_path %>
